# ====================================
# PAVILLON LES LYS API - CONFIGURATION
# ====================================

# Base de données PostgreSQL
DATABASE_URL="postgresql://pavillon_user:secure_password_2024@localhost:5432/pavillon_les_lys"
DB_PASSWORD=secure_password_2024
DB_PORT=5432

# Redis
REDIS_URL="redis://:redis_password_2024@localhost:6379"
REDIS_PASSWORD=redis_password_2024
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=super_secret_jwt_key_change_in_production_2024
JWT_EXPIRES_IN=24h

# Application
NODE_ENV=production
PORT=3000
API_PORT=3000

# CORS Origins (séparer par des virgules)
CORS_ORIGIN=http://localhost:3000,https://pavillon-les-lys.fr

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@pavillon-les-lys.fr

# Sécurité
BCRYPT_ROUNDS=12

# Nginx (si utilisé)
NGINX_PORT=80
NGINX_SSL_PORT=443

# Docker Hub (pour deployment)
DOCKER_REGISTRY=kysaymeric
IMAGE_NAME=pavillon-les-lys
IMAGE_TAG=1.0
